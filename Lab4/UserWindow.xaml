<Window x:Class="WpfApp.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User" Height="300" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="First Name:" Width="80"/>
                <TextBox Text="{Binding EditableUser.FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="5" Width="160"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Last Name:" Width="80"/>
                <TextBox Text="{Binding EditableUser.LastName, UpdateSourceTrigger=PropertyChanged}" Margin="5" Width="160"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Email:" Width="80"/>
                <TextBox Text="{Binding EditableUser.Email, UpdateSourceTrigger=PropertyChanged}" Margin="5" Width="160"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Birth Date:" Width="80"/>
                <DatePicker SelectedDate="{Binding EditableUser.BirthDate, UpdateSourceTrigger=PropertyChanged}" Margin="5" Width="160"/>
            </StackPanel>
            <Button Content="Save" Command="{Binding SaveEditCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
